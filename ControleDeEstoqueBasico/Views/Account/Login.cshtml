@model CRUDControleDeEstoque.Models.ViewModels.AccountViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card mt-3">
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="All" class="text-danger mt-3"></div>
                            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" id="email"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Senha">Senha</label>
                                <input asp-for="Senha" class="form-control" id="senha"/>
                            </div>
                            <input type="submit" value="Entrar" class="btn btn-block btn-outline-success mt-4" id="btn-enviar"/>
                            <br />
                            <a asp-action="Registrar" class="btn btn-block btn-outline-primary mb-4">Registar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
