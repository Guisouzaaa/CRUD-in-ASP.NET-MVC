@model UsuarioViewModel

@{
    ViewData["Title"] = "Registrar";
}


<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card mt-3">
                <div class="row">
                    <div class="col-md-8 mx-auto">
                        <form asp-action="Registrar" method="post">
                            <div asp-validation-summary="All" class="text-danger mt-3"></div>
                            <div class="form-group">
                                <label asp-for="Nome">Nome</label>
                                <input asp-for="Nome" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Senha">Senha</label>
                                <input asp-for="Senha" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmarSenha">Digite a senha novamente</label>
                                <input asp-for="ConfirmarSenha" class="form-control"/>
                            </div>
                            <input type="submit" value="Registrar" class="btn btn-block btn-outline-success mt-4"/>
                            <br />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
